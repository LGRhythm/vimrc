{
    "java.home": "/usr/lib/jvm/java-11-jdk/",
    "java.jdt.ls.vmargs": "-noverify -Xmx1G -XX:+UseG1GC -XX:+UseStringDeduplication -javaagent:/home/rhythm/.m2/repository/org/projectlombok/lombok/1.18.16/lombok-1.18.16.jar -Xbootclasspath/a:/home/rhythm/.m2/repository/org/projectlombok/lombok/1.18.16/lombok-1.18.16.jar",
    "python.jediEnabled": true,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.colorSupport": true,
    "suggest.enablePreview": true,
    "suggest.echodocSupport": true,
    "languageserver": {
        "dart": {
            "command": "dart",
            "args": [
                "/opt/dart-sdk/bin/snapshots/analysis_server.dart.snapshot",
                "--lsp"
            ],
            "filetypes": ["dart"],
            "disableDynamicRegister": true,
            "trace.server": "verbose"
        },
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"]
        },
        "groovy": {
            "command": "java",
            "args": ["-jar", "$HOME/.vim/groovy-language-server.jar"],
            "filetypes": ["groovy"]
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "disableWorkspaceFolders": true,
            "filetypes": ["go"]
        }
    }
} 
